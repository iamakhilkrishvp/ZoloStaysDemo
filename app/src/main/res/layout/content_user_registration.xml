<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zolo.in.zolostays.zolostaysdemo.Activity.View.UserRegistrationActivity"
    tools:showIn="@layout/activity_user_registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="LOG IN"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Please register with zolo to continue"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="56dp"
            android:layout_toStartOf="@+id/textView10"
            app:srcCompat="@drawable/call_icon" />

        <EditText
            android:id="@+id/phoneNumertextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/imageView5"
            android:backgroundTint="@color/white"
            android:hint="@string/prompt_email"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"
            android:windowSoftInputMode="stateHidden" />

        <EditText
            android:id="@+id/emailIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phoneNumertextView"
            android:layout_below="@+id/phoneNumertextView"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:hint="EMAIL ID"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"
            android:windowSoftInputMode="stateHidden" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/emailIdText"
            android:layout_alignStart="@+id/imageView5"
            app:srcCompat="@drawable/email_icon" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailIdText"
            android:layout_below="@+id/emailIdText"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:hint="YOUR NAME"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"
            android:windowSoftInputMode="stateHidden" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/nameText"
            android:layout_alignStart="@+id/imageView9"
            app:srcCompat="@drawable/name_icon" />

        <com.xwray.passwordview.PasswordView
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameText"
            android:layout_below="@+id/nameText"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:hint="SET PASSWORD"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp"
            android:windowSoftInputMode="stateHidden" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/passwordText"
            android:layout_alignStart="@+id/imageView10"
            app:srcCompat="@drawable/password_lock_icon" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/passwordText"
            android:layout_alignStart="@+id/imageView11"
            android:layout_below="@+id/passwordText"
            android:layout_marginTop="38dp"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="@string/register_text"
            android:textColor="@color/black" />
    </RelativeLayout>
</ScrollView>

